.list {
  background: #F7F7F7;
  margin: 0 10px 0;
}

.list-item {
  background: #fff;
  box-shadow: 0 0 2px #ccc;
  margin-top: 10px;
}

.list-item .title {
  font-size: 14px;
  font-weight: bold;
}

.list-item .brief-content {
  font-size: 12px;
}

.list-item .brief-bottom {
  margin-top: 7px;
  font-size: 13px;
}

.brief-bottom-left .points {
  color: #46adf4;
}

.brief-bottom-right {
  float: right;
  color: #999;
}